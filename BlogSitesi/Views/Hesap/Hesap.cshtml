@model Kullanici

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kullanıcı Profili</title>
    <style>
        .avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%; 
            margin-bottom: 20px;
        }
        .container {
            text-align: center;
        }
    </style>
</head>
<body>
    <main>
        <img src="~/ProfilResimleri/@Model.ProfilResmiYolu"  class="avatar mt-2">
        <br />
        <a asp-action="ProfilDegis" asp-controller="Hesap" class="btn btn-warning">Profil Resmini Değiştir</a>
        <div class="container">
            <p>Adım: @Model.Ad</p>
            <p>Soyadım: @Model.Soyad</p>
            <p>Biyografim: @Model.Biyografi</p>
            <p>Emailim: @Model.UserName</p>
            <a class="btn btn-primary " asp-action="ProfilDuzenle" asp-controller="Hesap" asp-route-id="@Model.Id">Bilgilerimi Güncelle</a>
            <a class="btn btn-primary " asp-action="YazdigimMakaleler" asp-controller="Hesap" asp-route-id="@Model.Id">Yazdığım Makaleler</a>
            <a class="btn btn-danger" asp-action="Delete" asp-controller="Hesap" asp-route-id="@Model.Id">Hesabımı Sil</a>
        </div>
    </main>
</body>
</html>
