<link href="~/css/stylesheet.css" rel="stylesheet" />
@model LoginVM

@{
    ViewData["Title"] = "Login";
}
@{
    if (TempData["Basarili"] != null)
    {
        <div class="alert alert-success m-0">@TempData["Basarili"]</div>
    }
}
<h1>Giriş Yap</h1>
<hr />
<div class="row ">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sifre" class="control-label"></label>
                <input asp-for="Sifre" class="form-control" type="password" />
                <span asp-validation-for="Sifre" class="text-danger"></span>
            </div>
            <div class="form-group text-danger">
                @Html.ValidationMessage("Hata")
            </div>
            <div class="form-group">
                <input type="submit" value="Giriş Yap" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Register">Bir Hesabın Yok Mu?</a>
</div>
